
# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Primary database connection (PostgreSQL)
DATABASE_URL="postgresql://username:password@hostname:port/database_name"

# Alternative individual database configuration (fallback)
PGHOST=localhost
PGPORT=5432
PGDATABASE=your_database_name
PGUSER=your_username
PGPASSWORD=your_password

# Optional: Direct database URL (for connection pooling)
DIRECT_URL="postgresql://username:password@hostname:port/database_name"

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT Secret for authentication tokens (minimum 32 characters)
JWT_SECRET="your_very_secure_jwt_secret_key_here_minimum_32_characters"

# Session secret for additional security
SESSION_SECRET="another_very_secure_session_secret_key_here"

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_or_smtp_password
SMTP_FROM=your_email@gmail.com

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Environment mode
NODE_ENV=production

# Server port
PORT=3000

# Base URL for API calls (used in radio config)
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Upload directory (relative to project root)
UPLOAD_DIR=./public/uploads

# Maximum file size in bytes (10MB default)
MAX_FILE_SIZE=10485760

# ===========================================
# DATABASE & SSL CONFIGURATION
# ===========================================
# Set to "true" if your database requires SSL
DATABASE_SSL=false

# ===========================================
# OPTIONAL: RATE LIMITING
# ===========================================
# Rate limiting window in milliseconds (15 minutes default)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# OPTIONAL: EXTERNAL SERVICES
# ===========================================
# Add any external API keys your app might use
# EXTERNAL_API_KEY=your_api_key_here
# ANALYTICS_ID=your_analytics_id
# CDN_URL=https://your-cdn.com

# ===========================================
# PRODUCTION SPECIFIC
# ===========================================
# Bearer token for API authentication
X_BEARER_TOKEN=your_bearer_token_here
